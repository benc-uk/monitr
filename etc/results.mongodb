use('monitr');

db.results.aggregate([
  {

    $lookup: {
      from: "monitors",
      localField: "monitor_id",
      foreignField: "_id",
      as: "mon"
    },
  },
   {
      $project: {
        status: 1,
        value: 1,
        date: 1,
        message: 1,
        "mon.name": 1,
        "mon.type": 1,
        "mon.target": 1,
      }
   }
])

